<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_unpaid_sessions_toolbar"
        layout="@layout/toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_unpaid_sessions_recycler_view"
        android:layout_width="match_parent"
        android:clipToPadding="false"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_unpaid_sessions_toolbar" />

    <TextView
        android:id="@+id/id_unpaid_sessions_empty_view"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="No unpaid sessions to show."
        android:textColor="@color/brinkpink"
        android:fontFamily="@font/open_sans_semibold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/id_unpaid_sessions_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/id_unpaid_sessions_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_unpaid_sessions_toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>